{
  "extends": ["airbnb-base", "prettier"],
  "env": {
    "jest": true,
    "node": true
  },
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": ["error"],
    "comma-dangle": [
      "error",
      {
        "arrays": "ignore",
        "objects": "ignore",
        "imports": "ignore",
        "exports": "ignore",
        "functions": "never"
      }
    ],
    "no-console": 0,
    "no-use-before-define": 0,
    "arrow-parens": ["warn", "as-needed"]
  }
}
